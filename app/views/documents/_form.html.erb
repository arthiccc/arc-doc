<div class="max-w-2xl">
  <header class="mb-12">
    <h2 class="text-4xl text-[#1a1a1a] mb-2"><%= document.new_record? ? "New Record Entry" : "Amend Record" %></h2>
    <p class="text-sm italic text-[#999]">Please ensure all metadata is accurate before filing.</p>
  </header>

  <%= form_with(model: document, class: "space-y-10") do |form| %>
    <% if document.errors.any? %>
      <div class="p-6 bg-red-50 border border-red-100 italic text-sm text-red-600">
        <h3 class="font-bold not-italic mb-2"><%= pluralize(document.errors.count, "oversight") %> detected:</h3>
        <ul class="list-disc ml-5">
          <% document.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-8">
      <div>
        <%= form.label :title, "Document Title", class: "block text-[10px] font-bold uppercase tracking-widest text-[#999] mb-3" %>
        <%= form.text_field :title, class: "w-full bg-transparent border-b paper-border focus:paper-border focus:ring-0 focus:border-black py-2 italic text-xl" %>
      </div>

      <div>
        <%= form.label :description, "Annotation", class: "block text-[10px] font-bold uppercase tracking-widest text-[#999] mb-3" %>
        <%= form.text_area :description, rows: 3, class: "w-full bg-transparent border paper-border focus:paper-border focus:ring-0 focus:border-black p-4 text-sm" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <div>
          <%= form.label :category_id, "Classification", class: "block text-[10px] font-bold uppercase tracking-widest text-[#999] mb-3" %>
          <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select..." }, class: "w-full bg-transparent border-b paper-border focus:ring-0 focus:border-black py-2 text-sm appearance-none" %>
        </div>

        <div>
          <%= form.label :file, "Physical File", class: "block text-[10px] font-bold uppercase tracking-widest text-[#999] mb-3" %>
          <%= form.file_field :file, class: "text-xs text-[#666] file:mr-4 file:py-2 file:px-4 file:bg-[#1a1a1a] file:text-white file:border-0 file:text-[10px] file:font-bold file:uppercase file:tracking-widest hover:file:bg-black cursor-pointer" %>
        </div>
      </div>
    </div>

    <div class="pt-12 border-t paper-border flex items-center gap-8">
      <%= form.submit "Deposit to Repository", class: "bg-[#1a1a1a] text-white px-10 py-4 text-xs font-bold uppercase tracking-widest hover:bg-black transition-colors rounded-sm cursor-pointer shadow-sm" %>
      <%= link_to "Abort", documents_path, class: "text-xs font-bold uppercase tracking-widest text-[#999] hover:text-black" %>
    </div>
  <% end %>
</div>
